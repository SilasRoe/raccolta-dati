{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Raccolta Dati",
  "version": "2.0.2",
  "identifier": "com.silas.raccolta-dati",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Raccolta Dati",
        "width": 1000,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.mistral.ai; img-src 'self' asset: https://asset.localhost data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"],
    "externalBin": ["binaries/pdftotext"],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlEMEM1MjhDNjhBNzFEOEYKUldTUEhhZG9qRklNbmVyWExLRmpyTEZkZEdBUUM1ZHF2VXFPR3ZNZUxxTEFYdWg2VFZ5WG15RGMK",
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}",
        "https://github.com/SilasRoe/raccolta-dati/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
